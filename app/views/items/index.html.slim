= form_tag items_path, method: :get, role: 'search' do
  = text_field_tag :name_search, params[:name_search], placeholder: "Имя"
  = text_field_tag :search_color, params[:search_color], placeholder: "Цвет"
  = text_field_tag :search_category, params[:search_category], placeholder: "Категория"
  = text_field_tag :price_search_from, params[:price_search_from], placeholder: "Цена От"
  = text_field_tag :price_search_to, params[:price_search_to], placeholder: "Цена До"
  = submit_tag "Искать"
